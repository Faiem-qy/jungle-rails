<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <h2>Order Details</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Item</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |line_item| %>
        <%= render partial: "orders/line_item", locals: { line_item: line_item } %>
      <% end %>
    </tbody>
  </table>

  <div class="order-summary jumbotron">
    <h4>Order Total: <%= humanized_money_with_symbol @order.total_cents / 100 %></h4>
    <h5>A receipt for this order has been sent to: <%= @order.email %></h5>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
</section>
